<h1>Comments</h1>
<div>
    <table>
        <thead>
        <tr>
            <td>Id</td>
            <td>Author</td>
            <td>Comment</td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        <% for (var i = 0; i < data.comments.length; i++) { %>
        <tr>
            <td>
                <%= data.comments[i].id %>
            </td>
            <td>
                <%= data.comments[i].author %>
            </td>
            <td>
                <%= data.comments[i].text %>
            </td>
            <td>
                <a onclick="frontend.comment.remove(<%= data.comments[i].id %>)" class="linkButton danger">delete</a>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>